        <option>México</option>
        <option>Nicaragua</option>
        <option>Panamá</option>
        <option>Perú</option>
        <option>Puerto Rico</option>
        <option>República Dominicana</option>
        <option>Uruguay</option>
        <option>Venezuela</option>
        </select>
        </div>


        <div class="text">Email: </div>
        <div class="padding"><input type="email" class="campo" id="mail" name="mail" placeholder="Ingresá tu email"></div>
        
        <div class="text2">Contraseña: </div>
        <div class="padding"><input type="password" class="campo" id="password" name="password" placeholder="**************" required></div>
        </td>
        </tr>
        </table>
    </div>
    </div> 

    <div class="padding2"><button class="boton ingreso">Registrarme</button></div><br>
</form>

